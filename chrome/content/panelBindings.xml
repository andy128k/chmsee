<?xml version="1.0"?>
<bindings xmlns="http://www.mozilla.org/xbl"
          xmlns:xbl="http://www.mozilla.org/xbl"
          xmlns:xul="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul">
  <binding id="book-toolbox">
    <content>
      <xul:toolbar>
        <xul:toolbarbutton class="home-btn" oncommand="goHome(event);"/>
        <xul:toolbarbutton class="back-btn" oncommand="goBack(event);"/>
        <xul:toolbarbutton class="forward-btn" oncommand="goForward(event);"/>
        <xul:toolbarbutton class="previous-btn" oncommand="goPrevious(event);"/>
        <xul:toolbarbutton class="next-btn" oncommand="goNext(event);"/>
      </xul:toolbar>
    </content>
  </binding>

  <binding id="book-treebox">
    <content>
      <xul:tree seltype="single" datasources="rdf:null" ref="urn:chmsee:root"
                flags="dont-build-content" hidecolumnpicker="true" onselect="onTocSelected(event);" treelines="true"
                flex="1" width="200" persist="width">
        <xul:treecols>
          <xul:treecol label="Title" primary="true" flex="1"/>
          <xul:treecol label="Local" hidden="true" flex="1"/>
        </xul:treecols>

        <xul:template>
          <xul:rule>
            <xul:treechildren>
              <xul:treeitem uri="rdf:*">
                <xul:treerow>
                  <xul:treecell label="rdf:urn:chmsee:rdf#name"/>
                  <xul:treecell label="rdf:urn:chmsee:rdf#local"/>
                </xul:treerow>
              </xul:treeitem>
            </xul:treechildren>
          </xul:rule>
        </xul:template>
      </xul:tree>
    </content>
    <implementation>
      <property name="tree" read-only="true" onget="return document.getAnonymousNodes(this)[0];"/>
    </implementation>
  </binding>

</bindings>
